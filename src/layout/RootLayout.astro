---
import "../../src/global.css";

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- displays site properly based on user's device -->

		<link rel="icon" type="image/png" sizes="32x32" href="images/main-logo.webp" />

		<title>{title}</title>
		<meta
			name="description"
			content="We specialize in creating effective digital solutions that help businesses thrive."
		/>
	</head>
	<!-- slot change your page component -->
	<body class="size-full bg-cover" style="background-image: url(/images/background-sun.webp)">
		<slot />
	</body>
</html>
